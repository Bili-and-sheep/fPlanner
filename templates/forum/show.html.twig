{% extends 'base.html.twig' %}

{% block title %}Forum{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Forum</h1>

        <table class="table table-striped">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ forum.id }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ forum.title }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ forum.description }}</td>
                </tr>
                <tr>
                    <th>Location</th>
                    <td>{{ forum.location }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_forum_index') }}" class="btn btn-secondary">Back to list</a>
        <a href="{{ path('app_forum_edit', {'id': forum.id}) }}" class="btn btn-primary">Edit</a>

        {{ include('forum/_delete_form.html.twig') }}
    </div>
{% endblock %}