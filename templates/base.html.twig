<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
		{% block stylesheets %}{% endblock %}

		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
	</head>
	<header>
		<!-- Bootstrap Navbar -->
		<nav class="navbar navbar-expand-lg navbar-light bg-light  mx-auto navbarDelicious">
			<div class="container-fluid">

				<div class="collapse navbar-collapse justify-content-center" id="navbarNav">
					<ul class="navbar-nav">
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_delicious_popsicle') }}">Home</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_user_index') }}">User</a>
						</li>
						<li class="nav-item">
							{% if is_granted('IS_AUTHENTICATED_FULLY') %}
								<a class="nav-link" href="{{ path('app_forum_index') }}">Forum</a>
							{% else %}
								<a class="nav-link" href="{{ path('app_forum_show', {'id': '1'}) }}">Forum</a>
							{% endif %}
						</li>

						<li class="nav-item">
							{% if is_granted('IS_AUTHENTICATED_FULLY') %}
								<a class="nav-link" href="{{ path('app_stand_index') }}">Stand</a>
							{% else %}

							{% endif %}
						</li>

						<li class="nav-item">
							{% if is_granted('IS_AUTHENTICATED_FULLY') %}
								<a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
							{% else %}
								<a class="nav-link" href="{{ path('app_login') }}">Login</a>
							{% endif %}
						</li>

						<li class="nav-item">
							{% if is_granted('IS_AUTHENTICATED_FULLY')  %}
								{% else %}
									<a class="nav-link" href="{{ path('app_register') }}">Register</a>
							{% endif %}
						</li>


						{#<li class="nav-item">
							{% if is_granted('IS_AUTHENTICATED_FULLY')  %}
								<a class="nav-link" href="{{ path('app_security_profil') }}">2FA</a>
								{% else %}
							{% endif %}
						</li>
						#}

					</div>
				</div>
			</nav>

		</header>
		<body>
			{% block body %}{% endblock %}
		</body>
	</html>
</html>
